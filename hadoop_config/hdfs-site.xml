<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>
    
    <property>
        <name>dfs.replication.max</name>
        <value>1</value>
    </property>
    
    <property>
        <name>dfs.namenode.replication.min</name>
        <value>1</value>
    </property>

    <property>
        <name>dfs.namenode.http-address</name>
        <value>0.0.0.0:9870</value>
    </property>
    <property>
        <name>dfs.datanode.http-address</name>
        <value>0.0.0.0:9864</value>
    </property>
    <!-- Bind DataNode services to all interfaces so they are reachable -->
    <property>
        <name>dfs.datanode.address</name>
        <value>0.0.0.0:9866</value>
    </property>
    <property>
        <name>dfs.datanode.ipc.address</name>
        <value>0.0.0.0:9867</value>
    </property>
    <!-- For host (Windows) clients: advertise a hostname reachable from outside Docker -->
    <!-- Docker Desktop resolves host.docker.internal inside containers; publishing 9866 is required. -->
    <property>
        <name>dfs.datanode.hostname</name>
        <value>host.docker.internal</value>
    </property>
</configuration>